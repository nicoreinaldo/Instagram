<!DOCTYPE html>
<html>
  <head>
    <title>Instagram</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> 
    <link rel="shortcut icon" href="/assets/fav.ico">
  </head>

  <body>
  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="nav tamaño1 ">
        <li  ><%= link_to image_tag("cap.png"), root_path %></li>
      
      <%- if user_signed_in? %>
      <ul class="nav tamaño2 derecha">
        <li><%= link_to 'Cerrar Sesion', destroy_user_session_path, method: :delete,class:'btn btn-primary btn-sm' %></li>
      </ul>
      <% else %>
      <ul class="nav tamaño2 derecha">
          <li class="espacio "><%= link_to 'Iniciar Cesion',new_user_session_path,class:'btn btn-primary btn-sm'%></li>
          <li><%= link_to 'Registrar',new_user_registration_path,class:'btn btn-primary btn-sm' %></li>
      </ul>
      <% end %>
      </div>
    </div>
  </nav>
  	<div class="container">
      <br>
    	<%= yield %>
    </div>	
  </body>
</html>
